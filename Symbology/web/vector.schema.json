{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "legend": {
      "type": "array",
      "items": {
        "type": "array",
        "prefixItems": [
          {"type": "string"},
          {"type": "string"}
        ],
        "minItems": 2,
        "maxItems": 2
      }
    },
    "layerStyles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "source": { "type": "string" },
          "source-layer": { "type": "string" },
          "layout": { "type": "object" },
          "paint": { "type": "object" }
        },
        "required": [
          "id",
          "type",
          "source",
          "source-layer",
          "paint"
        ]
      }
    }
  },
  "required": [
    "legend",
    "layerStyles"
  ]
}