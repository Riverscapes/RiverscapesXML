<Protocol machine_code="TIER_1_GEOUNIT" version="1.0" status="experimental" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://xml.riverscapes.net/QRiS/protocol.xsd">
    <Label>Tier 1 Geomorphic Unit Protocol</Label>
    <Description>Tier 1 Geomorphic Unit Assessment of Valley Bottom</Description>
    <URL>https://lowtechpbr.restoration.usu.edu/</URL>
    <Citation> Wheaton J.M., Bennett S.N., Bouwes, N., Maestas J.D. and Shahverdian S.M. (Editors). 2019. Low-Tech Process-Based Restoration of Riverscapes: Design Manual. Version 1.0. Utah State University Restoration Consortium. Logan, UT. 286 pp. DOI: 10.13140/RG.2.2.19590.63049/2.</Citation>
    <Author>Zach Burgert</Author>
    <CreationDate>2025-08-18</CreationDate>
    <UpdatedDate>2025-09-02</UpdatedDate>
    <Layers>
        <Layer id="active_channel_lines" version="1.0" geom_type="Linestring">
            <Label>Active Channel Lines</Label>
            <Symbology>centerlines_tier_1.qml</Symbology>
            <Description>Centerlines of Primary and Non-Primary Channels</Description>
            <Fields>
                <ListField id="channel_type" version="1.0">
                    <Label>Type</Label>
                    <Values>
                        <Value>Primary</Value>
                        <Value>Non-Primary</Value>
                    </Values>
                </ListField>
                <TextField id="notes" version="1.0">
                    <Label>Notes</Label>
                </TextField>
            </Fields>
        </Layer>
            <Layer id="tier_1_geomorphic_unit_extents" version="1.0" geom_type="Polygon">
            <Label>Geomorphic Units</Label>
            <Symbology>tier_1_extents.qml</Symbology>
            <Description>Tier 1 Geomorphic Units Polygon Layer</Description>
            <Fields>
                <ListField id="geo_unit_type" version="1.0">
                    <Label>Type</Label>
                    <Values>
                        <Value>Channel</Value>
                        <Value>Active Floodplain</Value>
                        <Value>Inactive Floodplain</Value>
                        <Value>Terrace</Value>
                        <Value>Alluvial Fan</Value>
                        <Value>Colluvial Fan</Value>
                        <Value>Moraine</Value>
                        <Value>Hillslope/Upland</Value>
                    </Values>
                </ListField>
                <TextField id="notes" version="1.0">
                    <Label>Notes</Label>
                </TextField>
            </Fields>
        </Layer>
        <Layer id="margins" version="1.0" geom_type="Linestring">
            <Label>Margins</Label>
            <Symbology>margins.qml</Symbology>
            <Description>Margins of the Valley, Valley Bottom, and Active Channel</Description>
            <Fields>
                <ListField id="tier_1_margin_type" version="1.0">
                    <Label>Tier 1 Type</Label>
                    <Values>
                        <Value>Channel Margin</Value>
                        <Value>Valley Bottom Margin</Value>
                        <Value>Valley Margin</Value>
                    </Values>
                </ListField>
                <ListField id="margin_origin" version="1.0">
                    <Label>Origin</Label>
                    <Values>
                        <Value>Anthropogenic</Value>
                        <Value>Natural</Value>
                        <Value>Natural and Anthropogenic</Value>
                    </Values>
                </ListField>
                <ListField id="tier_2_margin_type" version="1.0">
                    <Label>Tier 2 Type</Label>
                    <Values>
                        <Value>Embankment</Value>
                        <Value>Fence</Value>
                        <Value>Hedgerow</Value>
                        <Value>Constructed Levee</Value>
                        <Value>Railroad</Value>
                        <Value>Road</Value>
                        <Value>Wall</Value>
                    </Values>
                </ListField>
                <ListField id="availability" version="1.0">
                    <Label>Available Sediment, Wood, or Vegetation</Label>
                    <Values>
                        <Value>Yes</Value>
                        <Value>No</Value>
                    </Values>
                </ListField>
                <TextField id="notes" version="1.0">
                    <Label>Notes</Label>
                </TextField>
            </Fields>
        </Layer>
        <Layer id="confining_margins" version="1.0" geom_type="Linestring">
            <Label>Confining Margins</Label>
            <Symbology>confining_margins.qml</Symbology>
            <Description>Confining Margins of the Active Channel</Description>
            <Fields>
                <ListField id="confinement_type" version="1.0">
                    <Label>Confinement Type</Label>
                    <Values>
                        <Value>Left</Value>
                        <Value>Right</Value>
                        <Value>Both</Value>
                    </Values>
                </ListField>
                <TextField id="notes" version="1.0">
                    <Label>Notes</Label>
                </TextField>
            </Fields>
        </Layer>
    </Layers>
    <Metrics>
        <Metric id="confining_margin_length" version="1.0" calculation_machine_code="length">
            <Label>Total Length of Confining Margins</Label>
            <DefaultLevel>Metric</DefaultLevel>
            <MinimumValue>0</MinimumValue>
            <Precision>2</Precision>
            <Parameters>
                <DCELayer layer_id_ref="confining_margins">
                </DCELayer>
            </Parameters>
        </Metric>
        <Metric id="active_channel_proportion" version="1.0" calculation_machine_code="area_proportion">
            <Label>Active Channel Proportion</Label>
            <DefaultLevel>Metric</DefaultLevel>
            <Description>Proportion of Active Channel within Valley Bottom of Each Sample Frame</Description>
            <DefinitionURL/>
            <MinimumValue>0</MinimumValue>
            <Precision>2</Precision>
            <Parameters>
                <DCELayer layer_id_ref="tier_1_geomorphic_unit_extents">
                    <Usage>Numerator</Usage>
                    <AttributeFilter field_id_ref="geo_unit_type">
                        <Value>Channel</Value>
                    </AttributeFilter>
                </DCELayer>
            </Parameters>
        </Metric> 
        <Metric id="active_floodplain_proportion" version="1.0" calculation_machine_code="area_proportion">
            <Label>Active Floodplain Proportion</Label>
            <DefaultLevel>Metric</DefaultLevel>
            <Description>Proportion of Active Floodplain within Valley Bottom of Each Sample Frame</Description>
            <DefinitionURL/>
            <MinimumValue>0</MinimumValue>
            <Precision>2</Precision>
            <Parameters>
                <DCELayer layer_id_ref="tier_1_geomorphic_unit_extents">
                    <Usage>Numerator</Usage>
                    <AttributeFilter field_id_ref="geo_unit_type">
                        <Value>Active Floodplain</Value>
                    </AttributeFilter>
                </DCELayer>
            </Parameters>
        </Metric>
        <Metric id="inactive_floodplain_proportion" version="1.0" calculation_machine_code="area_proportion">
            <Label>Inactive Floodplain Proportion</Label>
            <DefaultLevel>Metric</DefaultLevel>
            <Description>Proportion of Inactive Floodplain within Valley Bottom of Each Sample Frame</Description>
            <DefinitionURL/>
            <MinimumValue>0</MinimumValue>
            <Precision>2</Precision>
            <Parameters>
                <DCELayer layer_id_ref="tier_1_geomorphic_unit_extents">
                    <Usage>Numerator</Usage>
                    <AttributeFilter field_id_ref="geo_unit_type">
                        <Value>Inactive Floodplain</Value>
                    </AttributeFilter>
                </DCELayer>
            </Parameters>
        </Metric>
    </Metrics>
</Protocol>
