<Protocol machine_code="LTPBR_RRHS" version="1.0" status="experimental" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://xml.riverscapes.net/QRiS/protocol.xsd">
    <Label>Rapid Riverscape Health Protocol</Label>
    <Description>Adapted rapid survey from LTPBR V2 Protocol</Description>
    <URL></URL>
    <Citation>Weber N., Wheaton J.M.,  Shalcross A.,  Al-Chokhachy R, Bailey P., Bartelt K., Bennett S., Bouwes B., Bouwes N., Gilbert J., Dickard M., Heitke J., Jordan C., Glassic H., MacFarlane W.W., Miller S., Saunders C., Whitehead K. 2024. Low-Tech Process-Based Restoration Design and Monitoring Protocol: Standard Methods for Developing Project Designs and Assessing Riverscape Health. Version 2.0. Prepared by Anabranch Solutions and Utah State University Riverscapes Assessment and Monitoring Lab. Prepared for the Bureau of Land Management. Logan, UT. 81 pp. DOI: 10.5281/zenodo.13769899</Citation>
    <Author>Nick Weber</Author>
    <CreationDate>2025-02-05</CreationDate>
    <UpdatedDate>2025-02-05</UpdatedDate>
    <MetaData>
        <Meta name=""></Meta>
    </MetaData>
    <Layers>
        <Layer id="rapid_riverscape_health_observations" version="1.0" geom_type="Point">
            <Label>Rapid Riverscape Health Observations</Label>
            <Symbology></Symbology>
            <Description>A single layer meant to survey multiple riverscape feature types at one point representing a section (DGO) of the overall riverscape</Description>
            <Hierarchy>
                <HierarchyItem>RRHS Protocol Layers</HierarchyItem>
            </Hierarchy>
            <Fields>
                <ListField id="features_surveyed" version="1.0">
                    <Label>Features Surveyed</Label>
                    <Values allow_multiple_values="true">
                        <Value>Active Valley Bottom</Value>
                        <Value>Channel Units</Value>
                        <Value>Recovery Potential</Value>
                        <Value>Structural Elements</Value>
                        <Value>Channel Junctions</Value>
                        <Value>Inundation</Value>
                        <Value>Riparian Vegetation</Value>
                    </Values>
                </ListField>
                <IntegerField id="active_floodplain_percent" version="1.0">
                    <Label>Active Floodplain %</Label>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Active Valley Bottom</Value>
                        </Values>
                    </Visibility>
                    <MaximumValue>100</MaximumValue>
                </IntegerField>
                <IntegerField id="inactive_floodplain_percent" version="1.0">
                    <Label>Inactive Floodplain %</Label>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Active Valley Bottom</Value>
                        </Values>
                    </Visibility>
                    <MaximumValue>100</MaximumValue>
                </IntegerField>
                <IntegerField id="active_channel_percent" version="1.0">
                    <Label>Active Channel %</Label>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Active Valley Bottom</Value>
                        </Values>
                    </Visibility>
                    <MaximumValue>100</MaximumValue>
                </IntegerField>
                <IntegerField id="confluence_count" version="1.0">
                    <Label>Confluence Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Channel Junctions</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="diffluence_count" version="1.0">
                    <Label>Diffluence Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Channel Junctions</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="channel_head_count" version="1.0">
                    <Label>Channel Head Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Channel Junctions</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="dam_count" version="1.0">
                    <Label>Dam Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Structural Elements</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="jam_count" version="1.0">
                    <Label>Jam Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Structural Elements</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="vegetative_mass_count" version="1.0">
                    <Label>Vegetative Mass Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Structural Elements</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="pool_count" version="1.0">
                    <Label>Pool Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Channel Units</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="pond_count" version="1.0">
                    <Label>Pond Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Channel Units</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="chute_count" version="1.0">
                    <Label>Chute Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Channel Units</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="riffle_count" version="1.0">
                    <Label>Riffle Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Channel Units</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="mid_channel_bar_count" version="1.0">
                    <Label>Mid-Channel Bar Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Channel Units</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="bank_attached_bar_count" version="1.0">
                    <Label>Bank-Attached Bar Count</Label>
                    <DefaultValue>0</DefaultValue>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Channel Units</Value>
                        </Values>
                    </Visibility>
                </IntegerField>
                <IntegerField id="ponded_percent" version="1.0">
                    <Label>Ponded %</Label>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Inundation</Value>
                        </Values>
                    </Visibility>
                    <MaximumValue>100</MaximumValue>
                </IntegerField>
                <IntegerField id="free_flowing_percent" version="1.0">
                    <Label>Free Flowing %</Label>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Inundation</Value>
                        </Values>
                    </Visibility>
                    <MaximumValue>100</MaximumValue>
                </IntegerField>
                <IntegerField id="overflow_percent" version="1.0">
                    <Label>Overflow %</Label>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Inundation</Value>
                        </Values>
                    </Visibility>
                    <MaximumValue>100</MaximumValue>
                </IntegerField>
                <IntegerField id="recovery_potential_percent" version="1.0">
                    <Label>Recovery Potential %</Label>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Recovery Potential</Value>
                        </Values>
                    </Visibility>
                    <MaximumValue>100</MaximumValue>
                </IntegerField>
                <IntegerField id="riparian_vegetation_percent" version="1.0">
                    <Label>Riparian Vegetation %</Label>
                    <Visibility field_id_ref="features_surveyed">
                        <Values>
                            <Value>Riparian Vegetation</Value>
                        </Values>
                    </Visibility>
                    <MaximumValue>100</MaximumValue>
                </IntegerField>
            </Fields>
        </Layer>
    </Layers>
    <Metrics>
        <Metric id="dam_density" version="1.0" calculation_machine_code="count">
            <Label>Dam Density</Label>
            <DefaultLevel>Metric</DefaultLevel>
            <Description>Dams per mile of riverscape</Description>
            <DefinitionURL></DefinitionURL>
            <MinimumValue>0</MinimumValue>
            <Precision>3</Precision>
            <Parameters>
                <InputLayer input_ref="centerline" usage="normalization"/>
                <DCELayer layer_id_ref="rapid_riverscape_health_observations">
                    <Usage>Numerator</Usage>
                    <CountFields>
                        <CountField field_id_ref="dam_count" />
                    </CountFields>
                </DCELayer>
            </Parameters>
        </Metric>
        <Metric id="jam_density" version="1.0" calculation_machine_code="count">
