    <Layers>
        <Layer id="stream_assessment" version="1.0" geom_type="Linestring">
            <Label>Stream Assessment</Label>
            <Symbology>stream_assessment.qml</Symbology>
            <Description>LTPBR Opportunity Within Stream of Interest</Description>
            <Hierarchy>
                <HierarchyItem>Stream Assessment</HierarchyItem>
            </Hierarchy>
            <Fields>
                <ListField id="stream_order" version="1.0">
                    <Label>Stream Order Wadeability</Label>
                    <Values>
                        <Value>1st through 3rd Order Wadeable Stream</Value>
                        <Value>3rd through 5th Order Wadeable Stream</Value>
                        <Value>5th Order Non-Wadeable Stream or Higher</Value>
                    </Values>
                </ListField>
                <ListField id="bank_material" version="1.0">
                    <Label>Bank Material</Label>
                    <Values>
                        <Value>Loosely consolidated sediment and/or rock</Value>
                        <Value>Moderately compacted sediment and/or rock</Value>
                        <Value>Compact sediment and/or rock</Value>
                    </Values>
                </ListField>
                <ListField id="bed_material" version="1.0">
                    <Label>Bed Material</Label>
                    <Values>
                        <Value>Silt or clay</Value>
                        <Value>Sand or fine gravel</Value>
                        <Value>Coarse gravel or small cobbles</Value>
                        <Value>Large Cobbles or Boulders</Value>
                        <Value>Bedrock</Value>
                    </Values>
                </ListField>
                <ListField id="riparian_vegetation" version="1.0">
                    <Label>Riparian Vegetation</Label>
                    <Values>
                        <Value>Bare</Value>
                        <Value>Upland dominant; little to no riparian vegetation</Value>
                        <Value>Mixture of riparian and upland species</Value>
                        <Value>Riparian dominant; little to no upland vegetation</Value>
                    </Values>
                </ListField>
                <ListField id="flood_risk" version="1.0">
                    <Label>Flood Risk</Label>
                    <Values>
                        <Value>Evidence of small, frequent flood events</Value>
                        <Value>Evidence of medium-sized, infrequent flood events</Value>
                        <Value>Evidence of large, rare flood events</Value>
                    </Values>
                </ListField>
                <IntegerField id="opportunity_rating" version="1.0">
                    <Label>Opportunity Rating</Label>
                    <Slider min="0" max="5" step="1" />
                </IntegerField>
                <TextField id="notes" version="1.0"> 
                    <Label>Notes</Label>
                </TextField>
            </Fields>
        </Layer>
        <Layer id="land_use" version="1.0" geom_type="Polygon">
