        <Layer id="property_assessment" version="1.0" geom_type="Point">
            <Label>Property Assessment</Label>
            <Symbology>property.qml</Symbology>
            <Description>Assessment of LTPBR Feasibility on Property</Description>
            <Hierarchy>
