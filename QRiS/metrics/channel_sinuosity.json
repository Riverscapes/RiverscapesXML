{
    "$schema": "../qris_metrics.schema.json",
    "name": "Channel Sinuosity",
    "machine_name": "channel_sinuosity",
    "version": 1,
    "calculation_name": "sinuosity",
    "default_level": "Metric",
    "description": "The sinuosity of the primary channel in the riverscape sample frame",
    "metadata": {
        "min_value": 0,
        "precision": 3
    },
    "metric_params": {
        "layers": [
            {
                "layer_name": "centerlines",
                "attribute_filter": {
                    "field_name": "Type",
                    "values": [
                        "Primary"
                        
                    ]
                }
            }
        ]
    }
}