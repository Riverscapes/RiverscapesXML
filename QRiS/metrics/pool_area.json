{
    "$schema": "../qris_metrics.schema.json",
    "name": "Pool Area",
    "machine_name": "pool_area",
    "version": 1,
    "calculation_name": "area",
    "default_level": "Metric",
    "description": "The area of pools in containing sample frame",
    "metadata": {
        "min_value": 0,
        "precision": 2
    },
    "metric_params": {
        "layers": [
            {
                "layer_name": "geomorphic_unit_extents",
                "attribute_filter": {
                    "field_name": "Type",
                    "values": [
                        "Pool",
                        "Pond",
                        "Chute"
                    ]
                }
            }
        ]
    }
}