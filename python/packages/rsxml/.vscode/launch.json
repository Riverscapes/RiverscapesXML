  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    },
    {
      // You need to enable QGIS VSCode debugger plugin 
      // Before this will work
      "name": "QGIS Debug",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost",
    },
  ]
}